/* items with no value */
.itsBlank{background-color: #ff6060; opacity: 0.5;}
.itsBlank:hover{background-color: #46c4b4; opacity: 0.7;}

.budgetDetails{
  position: absolute;
  float: left;
  text-align: center;
}
.budgetDetails h4{
  font-weight: 600;
}
#money_i_have, #weekNum{
  background-color: #7b69eb;
  border-radius: 5px;
  color: white;
  font-size: 1.3em;
}
#weekNum{
  background-color: #79aafc;
  margin-top: 100px;
}
</style>
