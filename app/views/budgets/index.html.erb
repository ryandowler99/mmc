<p id="notice"><%= notice %></p>

<h1>Listing Budgets</h1>

<table>
  <thead>
    <tr>
      <th style="padding-right: 80px;">Created</th>
      <th>Title</th>
      <th>Money in</th>
      <th>Week</th>
      <th>Savings</th>
      <th>Bills</th>
      <th>Lunches</th>
      <th>Phone</th>
      <th>Travel</th>
      <th>Clothing</th>
      <th>Activities</th>
      <th>Entertainment</th>
      <th>Emergency fund</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td style="padding-right: 80px;" >
          <%= budget.created_at.strftime("%d/%h/%Y") %> at
          <%= budget.created_at.strftime("%H:%M") %>  
        </td>
        <td><%= budget.title %> (<%= budget.created_at.strftime("%Y-%m-%d") %>)</td>
        <td><%= budget.money_i_have %></td>
        <td><%= budget.week %></td>
        <td><%= budget.savings %></td>
        <td><%= budget.bills %></td>
        <td><%= budget.lunches %></td>
        <td><%= budget.phone %></td>
        <td><%= budget.travel %></td>
        <td><%= budget.clothing %></td>
        <td><%= budget.activities %></td>
        <td><%= budget.entertainment %></td>
        <td><%= budget.emergency_fund %></td>
        <td><%= link_to 'Show', budget %></td>
        <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
        <td><%= link_to 'Destroy', budget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

