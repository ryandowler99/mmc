<% render "devise/shared/links" %>

<style type="text/css">

.loginContainer {
    padding: 25px;
    position: fixed;
}

.form-login {
    background-color: #EDEDED;
    padding-top: 10px;
    padding-bottom: 20px;
    padding-left: 20px;
    padding-right: 20px;
    border-radius: 15px;
    border-color:#d2d2d2;
    border-width: 5px;
    box-shadow:0 1px 0 #cfcfcf;
}

h4 { 
 border:0 solid #fff; 
 border-bottom-width:1px;
 padding-bottom:10px;
 text-align: center;
}
text{ color: #7b69eb; font-size: 1.3em; }
.form-control { border-radius: 10px; }
.wrapper { text-align: center; }

form{ margin-top: 39px; }
.loginBtn{
  background-color: #7b69eb; color: white;
}
</style>
<div class="container loginContainer">
    <div class="row">
        <div class="col-md-offset-4 col-md-6">
            <div class="form-login">
            <h4>Welcome back to <text>My Money Counts</text></h4>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= f.email_field :email, autofocus: true, 
                  id: "userName", 
                  class: "form-control input-sm chat-input", 
                  placeholder: "Type your E-mail here" %>
              </br>
              <%= f.password_field :password, autocomplete: "off",
                  id: "userPassword",
                  class: "form-control input-sm chat-input",
                  placeholder: "And the password goes here" %>
              </br>
              <div class="wrapper">
              <span class="group-btn">     
                  <%= f.submit "Log in", class: "btn btn-md loginBtn"  %>
              </span>
            <% end %>
            </div>
            </div>
        
        </div>
    </div>
</div>
<%# if devise_mapping.rememberable? -%>
<div class="field">
  <%# f.check_box :remember_me %>
  <%# f.label :remember_me %>
</div>
<%# end -%>

<div class="actions">
  <%# f.submit "Log in" %>
</div>

