<style type="text/css">
  .navbar-default{
    border: 3px solid #7b69eb;
    border-radius: 15px;
    width: 98%;
    margin-left: 1%;
    margin-top: 1.8%;
    background-color: #8b7aecad;
    font-weight: bold;
    transform: scaleY(1.5);
    letter-spacing: 1px;
  }

  .navbar-default .navbar-nav > li > a:focus, .navbar-default .navbar-nav > li > a:hover{
        background-color: transparent;
    text-decoration: overline;
    font-size: 1.3em;
        color: #ffb471;
    font-weight: bolder;
  }

  .navbar-default .navbar-nav > .active > a{
    background-color: rgba(245, 245, 245, 0.5);
  }
  .navbar-default .navbar-nav > .active > a:hover{
    background: none;
  }
  .navbar-default .navbar-nav > li > a {
    color: white;
}
.navbar-nav{
  margin-left: -10%;
}


.navbar-brand b{
  color: #030006fa;
    font-weight: 900;
    margin-left: -150px;
    padding-right: 100px;
}
</style>
<div id="navigation" class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" style="color: #7b69eb;" href="/"><b><%= auto_tts('My Money Counts') %></b></a>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li class="<%= 'active' if current_page?(root_path) %> ttsOnHover"><a href="/" class="smothscroll"><%= auto_tts('About the app') %></a></li>
        <% if !user_signed_in? %>
              <li class="ttsOnHover <%= 'active' if current_page?(new_user_session_path) %>"> <%= link_to(new_user_session_path)  do %> 
                <%= auto_tts('Login') %>
                  <% end %>
                </li>
              <li class="ttsOnHover <%= 'active' if current_page?(new_user_registration_path) %>"> 
                <%= link_to( new_user_registration_path) do %>
                  <%= auto_tts('Sign up') %>
                <% end %>
                </li>    
        <% else %>
               <li class="ttsOnHover <%= 'active' if current_page?(pages_profile_path) %>"><a href="/pages/profile"><%= auto_tts('My Profile') %></a></li>
              <!-- <li><a href="/pages/profile">My Budgets</a></li> -->
              <li class="ttsOnHover <%= 'active' if current_page?(budgets_before_new_path) %>"><a href="/budgets/before_new"><%= auto_tts('Create a Budget now') %></a></li>    
          </ul>
          <ul class="nav navbar-nav" style="float: right;">
              <li class="ttsOnHover <%= 'active' if current_page?(pages_store_path) %>"><a href="/pages/store"><%= auto_tts('App store') %></a></li> 
              <li class="ttsOnHover <%= 'active' if current_page?(pages_calculator_path) %>"><%= link_to pages_calculator_path do %>
                <%= auto_tts('Calculator') %>
              <% end %> </li>
              <li class="ttsOnHover <%= 'active' if current_page?(videos_path) %>"><%= link_to videos_path do %> 
                  <%= auto_tts('Videos') %>
                <% end %></li>
              <li ><%= link_to(destroy_user_session_path) do %>
                  <%= auto_tts('Logout') %>
                <% end %>
              </li>   
          </ul>
        <% end %>
    </div><!--/.nav-collapse -->
  </div>
</div>
